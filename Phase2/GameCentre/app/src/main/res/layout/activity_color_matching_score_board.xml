<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ColorMatching.ColorMatchingScoreBoardActivity">

    <TextView
        android:id="@+id/cm_no2Record"
        android:layout_width="304dp"
        android:layout_height="58dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/cm_no3Record"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cm_no1Record"
        android:layout_width="304dp"
        android:layout_height="58dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/cm_no2Record"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cm_no3Record"
        android:layout_width="304dp"
        android:layout_height="58dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toTopOf="@+id/cm_no4Record"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cm_no4Record"
        android:layout_width="304dp"
        android:layout_height="58dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/cm_no5Record"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cm_no5Record"
        android:layout_width="304dp"
        android:layout_height="58dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cm_no2"
        android:layout_width="44dp"
        android:layout_height="60dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/cm_no3"
        app:layout_constraintEnd_toStartOf="@+id/cm_no2Record" />

    <TextView
        android:id="@+id/cm_no1"
        android:layout_width="44dp"
        android:layout_height="60dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/cm_no2"
        app:layout_constraintEnd_toStartOf="@+id/cm_no1Record" />

    <TextView
        android:id="@+id/cm_no3"
        android:layout_width="44dp"
        android:layout_height="60dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/cm_no4"
        app:layout_constraintEnd_toStartOf="@+id/cm_no3Record" />

    <TextView
        android:id="@+id/cm_no4"
        android:layout_width="44dp"
        android:layout_height="60dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/cm_no5"
        app:layout_constraintEnd_toStartOf="@+id/cm_no4Record" />

    <TextView
        android:id="@+id/cm_no5"
        android:layout_width="44dp"
        android:layout_height="60dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="43dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cm_no5Record" />

    <TextView
        android:id="@+id/cm_myScore"
        android:layout_width="318dp"
        android:layout_height="63dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="32dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cm_ScoreBoardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="163dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/cm_myScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>