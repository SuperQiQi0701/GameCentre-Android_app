<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="FlipToWin.FlipToWinStartingActivity">

    <TextView
        android:id="@+id/fliptowin_GameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="78dp"
        android:gravity="center"
        android:text="@string/introduction"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <Button
        android:id="@+id/fliptowin_StartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fliptowin_resumeButton"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="273dp"
        android:text="@string/new_game_play" />

    <Button
        android:id="@+id/fliptowin_LoadButton"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fliptowin_GameText"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="-133dp"
        android:layout_toStartOf="@+id/fliptowin_StartButton"
        android:text="@string/load_game" />

    <Button
        android:id="@+id/fliptowin_resumeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="166dp"
        android:layout_marginBottom="149dp"
        android:text="@string/resume" />

    <Button
        android:id="@+id/fliptowin_scoreBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="154dp"
        android:layout_marginTop="540dp"
        android:text="ScoreBoard" />

</RelativeLayout>