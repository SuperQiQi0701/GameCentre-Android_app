<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fliptowin_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FlipToWin.FlipGestureDetectGridView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fliptowingrid"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="61dp"
        tools:context="fall2018.csc2017.slidingtiles.FlipToWin.FlipToWinGameActivity">

    </FlipToWin.FlipGestureDetectGridView>

    <Button
        android:id="@+id/fliptowin_saveGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="5dp"
        android:text="@string/savegame"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/fliptowin_currScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap" />


</RelativeLayout>